{{#extends 'base'}}

{{#block 'title'}}
Categories
{{/block}}

{{#block 'content'}}

<header class="">
    <h1>Update Category: {{category.name}}</h1>
</header>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{form}}}
    <input type="submit" value="Save Changes" class="btn btn-primary"/>
    <a href="/categories" class="btn btn-dark">Cancel</a>
</form>

{{/block}}

{{/extends}}