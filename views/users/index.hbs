{{#extends 'base'}}

{{#block 'title'}}
Users
{{/block}}

{{#block 'content'}}
<header class="">
    <h1>Users Administration</h1>
    <p>Only System Administrator can register, verify or deactivate Business Users.</p>
    <a href="/users/register" class="btn btn-success btn-sm">Create</a>
</header>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Registered On</th>
            <th>Last Login</th>
            <th>Last Modified</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.email}}</td>
                <td>{{this.role}}</td>
                <td>{{this.created_on}}</td>
                <td>{{this.last_login_on}}</td>
                <td>{{this.modified_on}}</td>
                <td>
                    {{#if this.isDeactivated}}
                        <a href="/users/{{this.id}}/role/verify" class="btn btn-success btn-sm">Verify</a>
                    {{else}}
                        <a href="/users/{{this.id}}/role/Business/deactivate" class="btn btn-warning btn-sm">Deactivate</a>
                    {{/if}}
                    <a href="/users/{{this.id}}/update" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/users/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}
