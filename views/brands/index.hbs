{{#extends 'base'}}

{{#block 'title'}}
Brands
{{/block}}

{{#block 'content'}}
<header class="">
    <h1>Brands Admininstration</h1>
    <p>The brands information will be shown on the website for Products that are tied to a brand. Ensure that all logo links are working.</p>
    <a href="brands/create" class="btn btn-success btn-sm">Create</a>
</header>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Logo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each brands}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>
                    {{#if this.logo_image_url}}
                        <img src="{{this.logo_image_url}}" class="img-fluid img-thumbnail" style="max-height:'100px'"/>
                    {{/if}}
                </td>
                <td>
                    <a href="brands/{{this.id}}/update" class="btn btn-primary btn-sm">Edit</a>
                    <a href="brands/{{this.id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}
