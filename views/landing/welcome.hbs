{{#extends 'base'}}

{{#block 'title'}}
Welcome to GreatToGo!
{{/block}}

{{#block 'content'}}

{{#if user}}
    <header>
        <h1>Welcome to GreatToGo Foods eShop - Administration Module</h1>
        <p>For users to manage the GreatToGo Foods online shopping site. Access is only given to authorized personnel.</p>
    </header>
    <section>
        <h3>My Account</h3>
        <ul>
            <li>Username: {{user.name}}</li>
            <li>Email:{{user.email}}</li>
            <li>Role: {{user.role}}</li>
            <li>Last login on: {{user.last_login_on}}</li>
        </ul>
        <a href="/users/profile" class="btn btn-primary">My User Profile</a>
        <a href="/users/change-password" class="btn btn-secondary">Change Password</a>
    </section>

    <section class="mt-3">
        <h2>System Admin Only:</h2>
        <h3 class="mt-3">System Registration</h3>
        <a href="/users/register" class="btn btn-primary">Register New User</a>

        <h3 class="mt-3">Systems Management</h3>
        <a href="/users" class="btn btn-primary">Users</a>
        <a href="/customers" class="btn btn-primary">Customers</a>
        <a href="/categories" class="btn btn-primary">Product Categories</a>
    </section>

{{else}}
    <div class="alert alert-danger">
        <h1>This is a restricted website. Only for authorized personnel.</h1>
    </div>
{{/if}}

{{/block}}

{{/extends}}