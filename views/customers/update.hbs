{{#block 'content'}}

<header class="">
    <h1>Update Customer: {{customer.first_name}} {{customer.last_name}}</h1>
</header>

<form method="POST">
    <input type="hidden" name="_csrf" value="{{csrfToken}}"/>
    {{{form}}}
